{
    "name": "sierratecnologia/transmissor",
    "description": "Transmissor de Mensagens e Notificações",
    "type": "library",
    "keywords": [
        "sierratecnologia",
        "transmissor"
    ],
    "license": "MIT",
    "homepage": "https://sierratecnologia.com/packages/transmissor/",
    "support": {
        "email": "help@sierratecnologia.com.br",
        "issues": "https://github.com/sierratecnologia/transmissor/issues",
        "source": "https://github.com/sierratecnologia/transmissor",
        "docs": "https://github.com/sierratecnologia/transmissor/blob/master/README.md"
    },
    "authors": [
        {
            "name": "SierraTecnologia",
            "homepage": "https://sierratecnologia.com.br",
            "email": "help@sierratecnologia.com.br"
        },
        {
            "name": "Ricardo Rebello Sierra",
            "email": "contato@ricardosierra.com.br"
        }
    ],
    "require": {
        "php": "^7.4",
        "sierratecnologia/muleta": "dev-master",
        "sierratecnologia/crypto": "dev-master",
        "sierratecnologia/integrations": "dev-master",
        "sierratecnologia/locaravel": "dev-master",
        "sierratecnologia/telefonica": "dev-master",
        "ramsey/uuid": ">=3.8",
        "guzzlehttp/guzzle": "^6.0 || ^7.0",
        "overtrue/laravel-follow": "^1.0",
        "vanderlee/php-sentence": ">=1.0",
        "creativeorange/gravatar": "^1.0",
        "cmgmyr/messenger": "dev-master",    
        "laravel/passport": "^8.0|^9.0|^10.0"
    },
    "require-dev": {
        "barryvdh/laravel-debugbar": "*",
        "barryvdh/laravel-ide-helper": ">=2.7",
        "codedungeon/phpunit-result-printer": ">=0.27.0",
        "phpunit/phpunit": "^8.0|^9.0|^10.0"
    },
    "suggest": {
        "fzaninotto/faker": "*",
        "ricardosierra/laravel-model-events": "^1.0",
        "devio/pipedrive": "*"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^2.16",
        "orchestra/testbench": "^5.0",
        "phpunit/phpunit": "^9.3",
        "psalm/plugin-laravel": "^1.2",
        "vimeo/psalm": "^3.11"
    },
    "autoload": {
        "psr-4": {
            "Transmissor\\": "src/"
        },
        "files": [
            "helpers/activity_helper.php"
        ]
    },
     "scripts": {
        "psalm": "vendor/bin/psalm",
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage",
        "format": "vendor/bin/php-cs-fixer fix --allow-risky=yes",
        "check-style": "phpcs -p --standard=PSR12 src --extensions=php",
        "fix-style": "phpcbf -p --standard=PSR12 src --extensions=php"
    },
    "repositories": [
        {
            "type": "path",
            "url": "../**",
            "options": {
                "symlink": true
            }
        }
    ],
    "minimum-stability": "dev",
    "prefer-stable": true,
    "extra": {
        "laravel": {
            "providers": [
                "Transmissor\\TransmissorProvider"
            ]
        }
    }
}
